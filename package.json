{
  "name": "docs-backport-action",
  "version": "1.0.0",
  "description": "GitHub Action to backport documentation changes between folders in Docusaurus projects",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write **/*.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "github",
    "actions",
    "backport",
    "docusaurus"
  ],
  "author": "loft-sh",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.3.2",
    "typescript": "^5.3.3"
  }
}
